<div
        id="sidebarId"
        class="position-fixed d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar vh-100"
        style="z-index: 1000; "
      >
        <span style="right: 10px; top: 2px" class="position-absolute">
          <button class="btn" onclick="toggleSidebar()">
            <i class="bi bi-x-circle"></i>
          </button>
        </span>

        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <i class="bi bi-lightning-charge"></i>
          <span class="fs-4 sidebar-text">Sidebar</span>
        </a>
        <hr />
        
        <div class="flex-grow-1 overflow-auto">
          <ul class="nav nav-pills flex-column">
            <li class="nav-item">
              <a href="/" class="nav-link <%= status === 'index' ? 'active' : '' %> text-white" aria-current="page">
                <svg class="bi pe-none me-2" width="16" height="16">
                  <use xlink:href="#home" />
                </svg>
                <span class="sidebar-text"> Home </span>
              </a>
            </li>

            <li>
              <a href="../user/add.html" class="nav-link <%= status === 'add' ? 'active' : '' %> text-white">
                <svg class="bi pe-none me-2" width="16" height="16">
                  <use xlink:href="#people-circle" />
                </svg>
                <span class="sidebar-text"> Add Customers </span>
              </a>
            </li>

            <li>
              <a href="/search" class="nav-link <%= status === 'search' ? 'active' : '' %> text-white">
                <i class="bi bi-search me-2"></i>
                <span class="sidebar-text"> Search </span>
              </a>
            </li>

            <li>
              <a href="/dashboard" class="nav-link <%= status === 'dashboard' ? 'active' : '' %> text-white">
                <i class="bi bi-speedometer2 me-2"></i>
                <span class="sidebar-text"> Dashboard </span>
              </a>
            </li>

            <li>
              <a href="/account/settings" class="nav-link <%= status === 'settings' ? 'active' : '' %> text-white">
                <i class="bi bi-gear me-2"></i>
                <span class="sidebar-text"> Settings </span>
              </a>
            </li>
          </ul>
        </div>

        <hr />
        <% if (currentUser) { %>
        <div class="dropdown mt-auto">
          <a
            href="#"
            class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="<%= currentUser.profilePhoto %>"
              alt="Profile"
              width="40"
              height="40"
              class="rounded-circle me-2"
              style="object-fit: cover; border: 2px solid rgba(255,255,255,0.2);"
            />
            <div class="sidebar-text">
              <strong class="d-block"><%= currentUser.fullName || currentUser.email.split('@')[0] %></strong>
              <small class="text-muted"><%= currentUser.email %></small>
            </div>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="/dashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
            <li><a class="dropdown-item" href="/account/settings"><i class="bi bi-gear me-2"></i>Account Settings</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item text-danger" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Sign out</a></li>
          </ul>
        </div>
        <% } %>
      </div>